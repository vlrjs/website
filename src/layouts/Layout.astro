---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;

const nav_list = [{ name: "EPISODES", value: "./episodes/" }];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <script
      src="https://code.jquery.com/jquery-3.6.1.min.js"
      integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
      crossorigin="anonymous"
    ></script>
    <script src="/scripts/enquire.js" type="text/javascript"></script>

    <link href="/styles/style.css" rel="stylesheet" />
    <link href="/styles/common.css" rel="stylesheet" />
    <link href="/styles/layout.css" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600;700;800;900&family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Noto+Serif+JP:wght@200;300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body id="index" class="active">
    <div id="topWrap" class="active">
      <div id="fullWrap" class="active">
        <main class="ani active">
          <slot />
        </main>
        <footer>
          <span>Copyright &copy; 2022, Marill.</span>
        </footer>
      </div>
    </div>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        max-height: 999999px;
        outline: none;
      }
      footer {
        display: flex;
        height: 84px;
        margin: auto;
      }
      footer span {
        height: 24px;
        font-size: 1.125rem;
        line-height: 1;
        text-align: center;
        margin: auto;
      }
    </style>
  </body>
</html>
